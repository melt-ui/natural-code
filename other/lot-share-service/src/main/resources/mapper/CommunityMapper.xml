<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="space.qmen.lot.dao.CommunityDao">
    <resultMap id="BaseResultMap" type="space.qmen.lot.domain.Community">
        <result column="id" property="id" />
        <result column="name" property="name" />
        <result column="longitude" property="longitude" />
        <result column="latitude" property="latitude" />
        <result column="address" property="address" />
        <result column="icon" property="icon" />
        <result column="status" property="status" />
        <result column="pid" property="pid" />
        <result column="seq" property="seq" />
        <result column="status" property="status" />
        <result column="create_dt" property="createDT" />
    </resultMap>

    <parameterMap id="Community" type="space.qmen.lot.domain.Community"/>

    <sql id="Base_Column_List">
        id, name, longitude, latitude, address, icon, pid, seq, status, create_dt
    </sql>

    <select id="findById" resultMap="BaseResultMap" parameterType="java.lang.Long">
        select
        <include refid="Base_Column_List" />
        from community
        where id = #{id}
    </select>

    <select id="findAllCommunity" resultMap="BaseResultMap" >
        select
        <include refid="Base_Column_List" />
        from community
    </select>

    <insert id="saveCommunity" parameterMap="Community" useGeneratedKeys="true" keyProperty="id">
        insert into
        community(id,name,longitude, latitude, address, icon, pid, seq, status, create_dt)
        values
        ( #{id},#{name},#{longitude},#{latitude},#{address},
          #{icon},#{pid},#{seq},#{status},#{createDT} )
    </insert>

    <update id="updateCommunity" parameterMap="Community">
        update
        community
        set
        <if test="name!=null">
            name = #{name},
        </if>
        <if test="longitude!=null">
            longitude = #{longitude},
        </if>
        <if test="latitude!=null">
            latitude = #{latitude},
        </if>
        <if test="address!=null">
            address = #{address},
        </if>
        <if test="icon!=icon">
            icon = #{icon},
        </if>
        <if test="pid!=pid">
            pid = #{pid},
        </if>
        <if test="seq!=null">
            seq = #{seq},
        </if>
        <if test="status!=null">
            status = #{status},
        </if>
        create_dt= #{createDT}
        where
        id = #{id}
    </update>

    <delete id="deleteCommunity" parameterType="java.lang.Long">
        delete from
        community
        where
        id = #{id}
    </delete>
</mapper>

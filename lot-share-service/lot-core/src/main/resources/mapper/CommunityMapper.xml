<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="space.qmen.lot.dao.CommunityDao">

    <resultMap id="BaseResultMap" type="space.qmen.lot.entity.Community">
        <result column="id" property="id" />
        <result column="name" property="name" />
        <result column="f_area_id" property="fAreaId" />
        <result column="f_area_code" property="fAreaCode" />
        <result column="longitude" property="longitude" />
        <result column="latitude" property="latitude" />
        <result column="address" property="address" />
        <result column="seq" property="seq" />
        <result column="icon" property="icon" />
        <result column="description" property="description" />
        <result column="gmt_create" jdbcType="TIMESTAMP" property="gmtCreate" />
        <result column="gmt_modified" jdbcType="TIMESTAMP" property="gmtModified" />
        <result column="is_deleted" property="isDeleted" />
    </resultMap>

    <parameterMap id="Community" type="space.qmen.lot.entity.Community"/>
    <sql id="Base_Column_List">
        id, name,
        longitude,latitude,address,
        seq,icon,
        description,
        gmt_create, gmt_modified,
        f_area_id, f_area_code
        is_deleted
    </sql>


    <!-- 根据id获取小区 -->
    <select id="getCommunityById" resultMap="BaseResultMap" parameterType="java.lang.Long">
        select
        <include refid="Base_Column_List" />
        from community
        where id = #{id}
    </select>

    <select id="getCommunityPolicyById" resultType="space.qmen.lot.entity.CommunityPolicy" parameterType="java.lang.Long">
        select
          id,
          f_community_id,
          owner_benifit_percent,
          community_benifit_percent,
          timeout_unit_price,
          unit_price,
          morning_begin_time,
          morning_end_time,
          afternoon_begin_time,
          afternoon_end_time,
          gmt_create,
          gmt_modified
        FROM
            lk_community_policy
        WHERE
            f_community_id = #{id}
    </select>

    <!-- 根据AreaId获取小区 -->
    <select id="listCommunityByAreaId" resultMap="BaseResultMap" parameterType="java.lang.Long">
        select
        <include refid="Base_Column_List" />
        from community
        where f_area_id = #{id}
    </select>

    <!-- 显示所有小区 -->
    <select id="listCommunity" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from community
    </select>

    <!-- 新增小区 -->
    <insert id="saveCommunity" parameterMap="Community" useGeneratedKeys="true" keyProperty="id">
        insert into
        community(id, name,f_area_id, f_area_code, longitude, latitude)
        values
        (null,#{name},#{fAreaId}, #{fAreaCode}, #{longitude}, #{latitude})
    </insert>

    <!--更新小区-->
    <update id="updateCommunity" parameterMap="Community">
        update
        community
        set
        <if test="name!=null">
            name = #{name},
        </if>
        <if test="longitude!=null">
            longitude = #{longitude},
        </if>
        <if test="latitude!=null">
            latitude = #{latitude},
        </if>
        gmt_modified = CURRENT_TIMESTAMP
        where
        id = #{id}
    </update>

    <!-- 删除小区 -->
    <delete id="deleteCommunity" parameterType="java.lang.Long">
        delete from
        community
        where
        id = #{id}
    </delete>




    <!-- 获取小区及其收费标准 -->
    <select id="listCommunityByOwnerId" resultType="space.qmen.lot.dto.CommunitySelectDTO">
        select
            policy.f_community_id,
            community.`name`,
            policy.owner_benifit_percent
        from
            lk_community_policy AS policy,
            community
        where
            policy.f_community_id = community.id;
    </select>

    <select id="listCommunityIdsByAreaId" resultType="java.lang.Long" parameterType="java.lang.Long">
        SELECT
        community.id
        from
        community
        where
        community.f_area_id = #{areaId};
    </select>

    <select id="listCommunityIds" resultType="java.lang.Long" parameterType="space.qmen.lot.param.CommunityIdsParam">
        SELECT
          community.id
        from
          community
        where
          community.f_area_id = #{areaId}
            <if test="keyword!=null and keyword != ''">
                AND community.`name` like concat(concat('%',#{keyword}),'%')
            </if>
    </select>


</mapper>

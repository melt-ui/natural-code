<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="space.qmen.leaf.dao.YearDao">
    <resultMap id="BaseResultMap" type="space.qmen.leaf.domain.Year">
        <result column="id" property="id" />
        <result column="name" property="name" />
        <result column="is_now" property="isNow" />
        <result column="description" property="description" />
        <result column="status" property="status" />
    </resultMap>

    <parameterMap id="Year" type="space.qmen.leaf.domain.Year"/>

    <sql id="Base_Column_List">
        id, name, is_now, description, status
    </sql>

    <select id="findById" resultMap="BaseResultMap" parameterType="java.lang.Long">
        select
        <include refid="Base_Column_List" />
        from year
        where id = #{id}
    </select>

    <select id="findAllYear" resultMap="BaseResultMap" >
        select
        <include refid="Base_Column_List" />
        from year
    </select>

    <insert id="saveYear" parameterMap="Year" useGeneratedKeys="true" keyProperty="id">
        insert into
        year(id, name, is_now, description, status)
        values
        (#{id},#{name},#{isNow},#{description}, #{status})
    </insert>

    <update id="updateYear" parameterMap="Year">
        update
        year
        set
        <if test="name!=null">
            name = #{name},
        </if>
        <if test="isNow!=null">
            is_now = #{isNow},
        </if>
        <if test="description!=null">
            description = #{description},
        </if>
        <if test="status!=null">
            status = #{status}
        </if>
        where
        id = #{id}
    </update>

    <delete id="deleteYear" parameterType="java.lang.Long">
        delete from
        year
        where
        id = #{id}
    </delete>
</mapper>
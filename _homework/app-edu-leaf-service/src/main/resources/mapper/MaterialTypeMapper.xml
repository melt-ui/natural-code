<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="space.qmen.leaf.dao.MaterialTypeDao">
    <resultMap id="BaseResultMap" type="space.qmen.leaf.domain.MaterialType">
        <result column="id" property="id" />
        <result column="name" property="name" />
        <result column="intro" property="intro" />
        <result column="description" property="description" />
        <result column="is_required" property="isRequired" />
        <result column="status" property="status" />
    </resultMap>

    <parameterMap id="MaterialType" type="space.qmen.leaf.domain.MaterialType"/>

    <sql id="Base_Column_List">
        id, name, intro, description, is_required, status
    </sql>

    <select id="findById" resultMap="BaseResultMap" parameterType="java.lang.Long">
        select
        <include refid="Base_Column_List" />
        from material_type
        where id = #{id}
    </select>

    <select id="findAllMaterialType" resultMap="BaseResultMap" >
        select
        <include refid="Base_Column_List" />
        from material_type
    </select>

    <insert id="saveMaterialType" parameterMap="MaterialType" useGeneratedKeys="true" keyProperty="id">
        insert into
        material_type(id, name, intro, description, is_required, status)
        values
        (#{id},#{name},#{intro},#{description},#{isRequired},#{status})
    </insert>

    <update id="updateMaterialType" parameterMap="MaterialType">
        update
        material_type
        set
        <if test="name!=null">
            name = #{name},
        </if>
        <if test="intro!=null">
            intro = #{intro},
        </if>
        <if test="description!=null">
            description = #{description},
        </if>
        <if test="isRequired!=null">
            is_required = #{isRequired},
        </if>
        <if test="status!=null">
            status = #{status}
        </if>
        where
        id = #{id}
    </update>

    <delete id="deleteMaterialType" parameterType="java.lang.Long">
        delete from
        material_type
        where
        id = #{id}
    </delete>
</mapper>

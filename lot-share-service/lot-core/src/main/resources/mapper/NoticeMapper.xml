<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="space.qmen.lot.dao.NoticeDao">

    <select id="listNoticeByUserId" resultType="space.qmen.lot.entity.Notice" parameterType="java.lang.Long">
        select
          notice.id,
          notice.title,
          notice.action,
          notice.state,
          notice.content,
          notice.gmt_create
        from
            lk_user_notice,
            notice
        where
            lk_user_notice.f_notice_id = notice.id
            and notice.is_deleted = 0
          and lk_user_notice.`status` = 1
            and lk_user_notice.f_user_id = #{id}
        ORDER BY notice.gmt_create DESC;
    </select>

    <insert id="saveNotice" parameterType="space.qmen.lot.entity.Notice" useGeneratedKeys="true" keyProperty="id">
        insert into `notice`
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="action != null">action,</if>
            <if test="state != null">`state`,</if>
            <if test="title != null">title,</if>
            <if test="content != null">content,</if>
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="action != null">
               #{action},
            </if>
            <if test="state != null">
                #{state},
            </if>
            <if test="title != null">
                #{title},
            </if>
            <if test="content != null">
                #{content},
            </if>
        </trim>
    </insert>

    <!-- 进紧接上一步新增订单 -->
    <insert id="saveUserNotice" useGeneratedKeys="true" keyProperty="id">
        insert into lk_user_notice(f_notice_id, f_user_id)
        values((SELECT LAST_INSERT_ID()), #{userId})
    </insert>

</mapper>